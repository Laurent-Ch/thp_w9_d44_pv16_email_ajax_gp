<div class="form">
  <%= form_tag(emails_path, method: :post, class: "form", remote: 'true') do %>
    <%= submit_tag 'Recevoir un email', :name => 'commit'%>
  <% end %>
</div>

<div class="boxes">
  <div class="list_email">
    <h1>Liste des emails</h1>
      <ul id="email-list">
<% @emails.each do |email| %>
  <% if email.read %>
    <li><%= link_to email.object, email_path(email), remote: 'true', class: 'read_email' %></b></li>
  <% else %>
    <li><%= link_to email.object, email_path(email), remote: 'true' %></b></li>
  <% end %>
<% end %>
      </ul>
  </div>
  <div class="select_email">
    <h1 id="selected_email">Email sélectionné</h1>
    <div id="selected_content"></div>
  </div>
</div>