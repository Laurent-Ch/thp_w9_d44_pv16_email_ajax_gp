<div class="form">
  <%= form_tag(emails_path, method: :post, class: "form", remote: 'true') do %>
    <%= submit_tag 'Recevoir un email', :name => 'commit'%>
  <% end %>
</div>

<h1>Liste des emails</h1>
<ul id="email-list">
  <% @emails.each do |email| %>
    <li><%= email.object %></b></li>
  <% end %>
</ul>

<h1>Emails sélectionnés</h1>
<% if false %>
<ul id="email-list">
  <% @emails.each do |email| %>
    <li>"<%= email.object %>"</b></li>
  <% end %>
<% end %>
</ul>